@model PaginationPageModel
@{
}
<div class="text-center">
    @if (Model.PageCount != 1)
    {
        <ul class="pagination">
            @for (int i = 1; i <= Model.PageCount; i++)
            {
                if (i == Model.Page)
                {
                    <li class="active"><a>@i</a></li>
                }
                else
                {
                    <li><a asp-controller="Customer" asp-action="index" asp-route-page="@i" asp-route-searchValue="@Model.searchValue">@i</a></li>
                }
            }
        </ul>
    }
</div>